<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ccproject.cloud.cloudclubbing.fragments.eventDetail_fragment">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:gravity="center"
                android:id="@+id/tv_event_title"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_below="@+id/iv_event_image2"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/iv_event_image2"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tv_event_description"
                android:layout_below="@+id/tv_event_title"
                android:layout_alignLeft="@+id/iv_event_image2"
                android:layout_alignStart="@+id/iv_event_image2"
                android:layout_marginTop="20dp"
                android:layout_alignRight="@+id/iv_event_image2"
                android:layout_alignEnd="@+id/iv_event_image2" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
